<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="WPA\APIBundle\Repository\AuthCodeRepository" name="WPA\APIBundle\Entity\AuthCode" table="wpa__api_auth_code">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
	    <many-to-one field="client" target-entity="WPA\APIBundle\Entity\Client" inversed-by="authCodes">
			<join-column name="client_id" referenced-column-name="id"  nullable="false" on-delete="CASCADE"  />
			<cascade>
				<cascade-persist/>
			</cascade>
		</many-to-one>
		
		<many-to-one field="user" target-entity="Application\Sonata\UserBundle\Entity\User" inversed-by="authCodes">
			<join-column name="user_id" referenced-column-name="id"  nullable="true" on-delete="CASCADE" />
			<cascade>
				<cascade-persist/>
			</cascade>
		</many-to-one>
		
		<field name="createdAt" type="datetime" column="created_at"/>
		<field name="updatedAt" type="datetime" column="updated_at"/>
		
		<lifecycle-callbacks>
			<lifecycle-callback type="prePersist" method="prePersist"/>
			<lifecycle-callback type="preUpdate"  method="preUpdate"/>
		</lifecycle-callbacks>
		
  </entity>
</doctrine-mapping>
